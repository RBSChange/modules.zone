<?xml version="1.0"?>
<perspective>
	<models>
		<model name="modules_generic/rootfolder">
			<children>
				<child model="modules_generic/folder" />
				<child model="modules_zone/zone" />  	
			</children>
			<drops>
				<drop model="modules_zone/zone" action="move"/>
				<drop model="modules_zone/folder" action="move"/>
			</drops>
			<columns>
				<column name="code" label="Code" flex="2" />
			</columns>
			<contextactions>
				<contextaction name="edit"/>
				<groupactions name="create_">
					<contextaction name="createZone"/>
					<contextaction name="createFolder"/>
				</groupactions>
				<contextaction name="openTreeNodeOrder"/>
			</contextactions>
		</model>
		
		<model name="modules_generic/folder">
			<children>
				<child model="modules_generic/folder" />
				<child model="modules_zone/zone" />
				<child model="modules_zone/country" />
				<child model="modules_zone/department" />
			</children>
			<drops>
				<drop model="modules_zone/zone" action="move"/>
				<drop model="modules_zone/folder" action="move"/>
				<drop model="modules_zone/country" action="move"/>
				<drop model="modules_zone/department" action="move"/>
			</drops>
			<columns>
				<column name="code" label="Code" flex="2" />
			</columns>
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete"/>
				<contextaction name="openFolder"/>
				<contextaction name="openTreeNodeOrder"/>
				
				<groupactions name="createfolderzone_">
					<contextaction name="createZone"/>
					<contextaction name="createCountry"/>
					<contextaction name="createDepartment"/>
				</groupactions>
						
			</contextactions>
		</model>
		
		<model name="modules_zone/zone">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete"/>
				<contextaction name="setDefaultZone"/>
			</contextactions>
		</model>
				
		<model name="modules_zone/country">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete"/>
				<contextaction name="setDefaultZone"/>
			</contextactions>
		</model>
		
		<model name="modules_zone/department">
			<contextactions>
				<contextaction name="edit"/>
				<contextaction name="delete"/>
			</contextactions>
		</model>
	</models>
	
	<toolbar>
		<toolbarbutton name="edit"/>
		<toolbarbutton name="delete"/>
	</toolbar>
	<actions>
		<action name="refresh" single="true" icon="refresh" label="&amp;modules.uixul.bo.actions.Refresh;"/>
		<action name="delete" permission="Delete" icon="delete" label="&amp;modules.uixul.bo.actions.Delete;"/>
		<action name="edit" single="true" permission="Load" icon="edit" label="&amp;modules.uixul.bo.actions.Edit;"/>
		<action name="setDefaultZone" single="true" permission="LoadTags" icon="environment_ok" label="&amp;modules.zone.bo.actions.SetDefault;"/>
		<action name="openTreeNodeOrder" single="true" permission="Order" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;"/>
		<action name="openFolder" single="true" icon="open-folder" label="&amp;modules.uixul.bo.actions.OpenFolder;"/>
		<action name="create_" single="true" icon="add" />
		<action name="createfolderzone_" single="true" icon="add" />
		<action name="createZone" single="true"  permission="Insert_zone" icon="add" label="&amp;modules.zone.bo.actions.CreateZone;"/>
		<action name="createCountry" single="true"  permission="Insert_country" icon="add" label="&amp;modules.zone.bo.actions.CreateCountry;"/>
		<action name="createDepartment" single="true"  permission="Insert_department" icon="add" label="&amp;modules.zone.bo.actions.CreateDepartment;"/>
		<action name="createFolder" single="true" permission="Insert_folder" icon="create-folder" label="&amp;modules.uixul.bo.actions.Create-folder;"/>
		<action name="move" permission="Move" icon="up_down" label="&amp;modules.uixul.bo.actions.Move;"/>
	</actions>
</perspective>